<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TransPenjFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextTgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nopen"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="No Penjualan : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextnopen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kdbrg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Kode Barang : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextkdbrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namabrg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextnamabrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hrgbrg"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Barang : Rp."
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTexthrgbrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jmlbeli"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Jumlah beli : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextjmlbeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Total : Rp."
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="25dp"
                android:background="@android:color/holo_blue_light" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Stok Tersedia      : "
                android:textColor="@color/redorange"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Stok sisa barang : "
                android:textColor="@color/redorange"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnProses"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Proses"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:text="Hapus Data"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>